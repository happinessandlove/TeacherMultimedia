@{ ViewBag.Title = "Index";}
@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/Home/Index.js"></script>
}
<div id="summaryDisplay" class="display">
    <h4>Building</h4>
    <table>
        <thead>
            <tr>
                <th class="selectCol"></th>
                <th class="BuildingCol">楼号</th>
                
            </tr>
        </thead>
        <tbody id="tableBody">
            <tr><td colspan="2">The data is loading</td></tr>
        </tbody>
    </table>
    <div id="buttonContainer">
        <button id="refresh">Refresh</button>
        <button id="add">Add</button>
        <button id="edit">Edit</button>
        <button id="delete">Delete</button>
    </div>
</div> 
<div id="addDisplay" class="display">
    <h4>Add New Building</h4>
    @{
        AjaxOptions addAjaxOpts = new AjaxOptions
        {
            OnSuccess = "getData",
            Url = "/PostOne"
        };
    }
    @using (Ajax.BeginForm(addAjaxOpts))
    {
        @Html.Hidden("Id",0)
        <p><label>楼号:</label>@Html.Editor("Number")</p>
        <button type="submit">Submit</button>
    }
</div>

<div id="editDisplay" class="display">
    <h4>Edit Building</h4>
    <form id="editForm">
        <input id="editId" type="hidden" name="Id" />
        <p><label>楼号:</label><input id="editNumber" name="Number" type="text" /></p>
    </form>
    <button id="submitEdit" type="submit">Save</button>
</div>
