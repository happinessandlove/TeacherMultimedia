      <Action name="Edit" namecn="编辑" id="Edit_Building" title="编辑楼宇信息"/>
      <Action name="Delete" namecn="删除" id="Delete_Building" title="删除楼宇"/>
      <Action name="Exports" namecn="数据导出" id="Exports_Building" title="数据导出"/>
