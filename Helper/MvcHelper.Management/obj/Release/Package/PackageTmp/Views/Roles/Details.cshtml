@model Role
@{
    Layout = "~/Views/Shared/_LayoutSubpage.cshtml";
    string pageId = ViewBag.PageId;
    PageInfo pageInfo = SiteDirectory.GetPageInfo(pageId);
    ViewBag.Pid = pageInfo.Id;
    ViewBag.Pclass = pageInfo.Name;
    ViewBag.PageId = pageId + Model.Id;
}@section Style
{
    <style type="text/css">
        .form-key { width: 140px; }
    </style>
}@section ScriptHeader
{
}
<div id="tools-back">
</div>
<div id="tools">
    <div id="tool-items">
        @Html.RenderRefreshToolbarItem()
        @Html.RenderReturnToolbarItem(pageInfo)
    </div>
    <div id="tool-buttons">
    </div>
    <div class="clear-float">
    </div>
</div>
<div class="form-table">
    <table>
        <tbody>
			<tr>
				<td class="form-key">@Html.DisplayNameFor(model => model.Name)</td>
				<td class="form-value">@Html.DisplayFor(model => model.Name)</td>
			</tr>
			<tr>
				<td class="form-key">@Html.DisplayNameFor(model => model.MenuId)</td>
				<td class="form-value">@Html.DisplayFor(model => model.MenuId)</td>
			</tr>
			<tr>
				<td class="form-key">@Html.DisplayNameFor(model => model.Remarks)</td>
				<td class="form-value">@Html.DisplayFor(model => model.Remarks)</td>
			</tr>
        </tbody>
    </table>
</div>
@section ScriptFooter
{
    <script type="text/javascript" language="javascript">
        $(function ()
        {
        });
    </script>
}

